<%= semantic_form_for [:admin, @product], html: { multipart: true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :product_type %>
    <%= f.input :province, :collection => Area.provinces,
      :input_html => { :class => :cascade_select, 'data-cascade-target' => 'product_city_id' } %>
    <%= f.input :city, :collection => (f.object.city ? f.object.city.parent.children : '') %>
    <%= f.input :image, :image_preview => true %>
    <%= f.input :price %>
    <%= f.input :suv_price %>
    <%= f.input :market_price %>
    <%= f.input :description %>
  <% end %>
  <%= f.actions %>
<% end %>
